<% if @articles.any? %>
    <% @articles.each do |article| %>
            <% if article.geology_article %>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="panel-heading-link">
                            <%= link_to article.title, article_path(article) %>
                        </div>
                        <div class="panel-heading-button">
                            <% if logged_in? && article.user_id == current_user.id %>                   
                                <%= button_to "Delete this article", article_path(article), method: :delete, data: { confirm: "Are you sure you want to delete the article?" }, :class => "btn btn-danger" %>
                            <% end %>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="post-content-right">
                            <p><small>Created by: <%= article.user.username if article.user %></small></p>
                            <%= truncate(article.content, length: 500) %>
                        </div>
                            <div class="post-content-left">
                                <div class="row">
                                    <div class="col-xs-6 col-md-3">
                                        <%= image_tag(article.image.url, alt: 'Image') if article.image? %>  
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            <% end %>
    <% end %>
<% end %>